<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Address Book App</display-name>

	<servlet>
		<servlet-name>GreetingsController</servlet-name>
		<display-name>Greetings</display-name>
		<description></description>
		<servlet-class>com.zonesoft.addressbook.webui.GreetingController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PersonApi</servlet-name>
		<display-name>PersonApi</display-name>
		<description></description>
		<servlet-class>com.zonesoft.addressbook.webapi.PersonApi</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PersonController</servlet-name>
		<display-name>PersonController</display-name>
		<description></description>
		<servlet-class>com.zonesoft.addressbook.webui.PersonController</servlet-class>
	</servlet>
	
		
	<servlet-mapping>
		<servlet-name>GreetingsController</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>PersonApi</servlet-name>
		<url-pattern>/api/person</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PersonController</servlet-name>
		<url-pattern>/ui/person</url-pattern>
	</servlet-mapping>

	
</web-app>