<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Address Book App</display-name>
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<display-name>HelloServlet</display-name>
		<description></description>
		<servlet-class>com.zonesoft.addressbook.servlets.HelloServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PersonApi</servlet-name>
		<display-name>PersonApi</display-name>
		<description></description>
		<servlet-class>com.zonesoft.addressbook.api.PersonApi</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>PersonApi</servlet-name>
		<url-pattern>/api/person</url-pattern>
	</servlet-mapping>
	
</web-app>
